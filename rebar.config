%% == Erlang Compiler ==

{minimum_otp_vsn, "19.3"}.

{erl_opts, [
    debug_info,
    warn_export_vars,
    warn_unused_import,
    warnings_as_errors,
    {i, "src"},
    {parse_transform, stacktrace_transform}
]}.

%% == Dependencies and plugins ==

{deps, [
    {parse_trans, {git, "https://github.com/uwiger/parse_trans.git", {ref, "35439e2"}}}, % FIXME: we don't actually depend on this, but want to prevent an OTP 24 compilation warning
    {stacktrace_compat, "1.2.1"},
    {tls_certificate_check, "1.1.1"}
]}.

{project_plugins, [
    {rebar3_lint, "0.3.2"}
]}.

%% == Dialyzer ==

{dialyzer, [
    {warnings, [
        error_handling,
        underspecs,
        unknown,
        unmatched_returns
    ]}
]}.

%% == Xref ==

{xref_checks, [
    deprecated_function_calls,
    exports_not_used,
    locals_not_used,
    undefined_function_calls
]}.

%% == Profiles ==

{profiles, [
    {test, [
        {cover_enabled, true},
        {cover_opts, [verbose]},
        {dialyzer, [
            {plt_extra_apps, [eunit]},
            {warnings, [
                error_handling,
                underspecs,
                unknown
            ]}
        ]},
        {erl_opts, [
            debug_info,
            nowarn_export_all,
            nowarn_missing_spec,
            nowarn_missing_spec_all,
            warn_export_vars,
            warn_unused_import,
            warnings_as_errors,
            {d, 'SKIP_BROKEN_TEST_CASES'},
            {d, 'SKIP_IPV6_TEST_CASES'}
        ]},
        {extra_src_dirs, [{"test", [{recursive, true}]}]},
        {xref_extra_paths, ["test"]}
    ]}
]}.

%% == EDoc ==

{edoc_opts, [
    {includes, ["src"]},
    {preprocess, true}
]}.
